<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FinkiASK" parent="Base.Theme.FinkiASK">
    </style>

    <style name="Base.Theme.FinkiASK" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background</item>

        <item name="discreteSeekBarStyle">@style/discreteSeekBarStyle</item>
    </style>

    <style name="Theme.FinkiASK.Login" parent="Theme.FinkiASK">
        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>
        <item name="android:textColor">@color/white</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="LoginDialogStyle">
        <item name="android:bottomBright">@color/primary</item>
        <item name="android:bottomDark">@color/primary</item>
        <item name="android:bottomMedium">@color/primary</item>
        <item name="android:centerBright">@color/primary</item>
        <item name="android:centerDark">@color/primary</item>
        <item name="android:centerMedium">@color/primary</item>
        <item name="android:fullBright">@color/primary</item>
        <item name="android:fullDark">@color/primary</item>
        <item name="android:topBright">@color/primary</item>
        <item name="android:topDark">@color/primary</item>
    </style>
    
    <style name="Theme.FinkiASK.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
        <item name="android:alertDialogStyle">@style/LoginDialogStyle</item>
    </style>

    <style name="discreteSeekBarStyle">
        <item name="dsb_progressColor">@color/primary</item>
        <item name="dsb_indicatorColor">@color/primary</item>
        <item name="dsb_trackColor">@color/iron</item>
        <item name="dsb_rippleColor">@color/iron</item>
    </style>

</resources>
